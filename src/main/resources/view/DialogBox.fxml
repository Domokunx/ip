<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.geometry.Rectangle2D?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.HBox?>

<fx:root alignment="TOP_RIGHT" type="javafx.scene.layout.HBox"
         xmlns="http://javafx.com/javafx/22" xmlns:fx="http://javafx.com/fxml/1">
    <Label fx:id="dialog" alignment="CENTER_RIGHT" text="Label" lineSpacing="5"/>
    <ImageView fx:id="displayPicture" fitHeight="100.0" fitWidth="100.0" pickOnBounds="true" preserveRatio="true"
               translateY="15.0">
        <HBox.margin>
        <Insets left="10.0" right="10.0"/>
        </HBox.margin>
        <viewport>
        <Rectangle2D/>
        </viewport>
    </ImageView>
</fx:root>
